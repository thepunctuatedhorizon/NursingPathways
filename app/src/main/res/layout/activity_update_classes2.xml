<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg"
    tools:context=".UpdateClassesInProgress">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:id="@+id/scrollViewUpdateClassesReal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/relativeLayoutUpdateReal"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/please_select_the_courses_you_have_successfully_completed_or_that_your_adviser_has_said_will_transfer_it_is_ok_if_you_haven_apos_t_taken_all_of_the_classes_listed"
                android:id="@+id/pleaseUpdateReal"
                android:gravity="center_horizontal"
                android:background="@drawable/bttn_green"
                android:textColor="@color/abc_primary_text_disable_only_material_light" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>

